<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="bg-pane" stylesheets="@../css/ManagingMenu.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="view.GUI.Controllers$AdminRequestManagingMenu">
    <center>
        <BorderPane>
            <center>
                <TabPane maxWidth="-Infinity" stylesheets="@../css/TabPane.css">
                    <Tab closable="false" text="Pending Requests">
                        <VBox alignment="CENTER" maxWidth="-Infinity">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0"/>
                            </padding>
                            <TableView fx:id="pending" focusTraversable="false" stylesheets="@../css/TableView.css"
                                       VBox.vgrow="ALWAYS">
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                                <columns>
                                    <TableColumn fx:id="pendingIdCol" prefWidth="200.0" resizable="false" text="ID"/>
                                    <TableColumn fx:id="pendingTypeCOL" prefWidth="200.0" resizable="false"
                                                 text="Type"/>
                                    <TableColumn fx:id="PendingDateCOL" prefWidth="150.0" resizable="false"
                                                 text="Date"/>
                                    <TableColumn fx:id="pendingDetailsCOL" prefWidth="100.0" resizable="false"
                                                 text="Details"/>
                                    <TableColumn fx:id="pendingAcceptCOL" prefWidth="150.0" resizable="false"
                                                 text="Accept/Remove"/>
                                </columns>
                                <VBox.margin>
                                    <Insets/>
                                </VBox.margin>
                                <padding>
                                    <Insets bottom="5.0"/>
                                </padding>
                            </TableView>
                            <HBox alignment="CENTER" spacing="10.0">
                                <padding>
                                    <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                                <Label id="message-label" text="Possible error" visible="false"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" styleClass="action-button" visible="false"/>
                            </HBox>
                        </VBox>
                    </Tab>
                    <Tab closable="false" text="Archive">
                        <VBox alignment="CENTER" maxWidth="-Infinity">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0"/>
                            </padding>
                            <TableView fx:id="archive" focusTraversable="false" stylesheets="@../css/TableView.css"
                                       VBox.vgrow="ALWAYS">
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                                <columns>
                                    <TableColumn fx:id="archiveIdCol" prefWidth="200.0" resizable="false" text="ID"/>
                                    <TableColumn fx:id="archiveTypeCOL" prefWidth="200.0" resizable="false"
                                                 text="Type"/>
                                    <TableColumn fx:id="archiveDateCOL" prefWidth="150.0" resizable="false"
                                                 text="Date"/>
                                    <TableColumn fx:id="archiveDetailsCOL" prefWidth="100.0" resizable="false"
                                                 text="Details"/>
                                    <TableColumn fx:id="archiveAcceptCOL" prefWidth="150.0" resizable="false"
                                                 text="Status"/>
                                </columns>
                                <VBox.margin>
                                    <Insets/>
                                </VBox.margin>
                                <padding>
                                    <Insets bottom="5.0"/>
                                </padding>
                            </TableView>
                            <HBox alignment="CENTER" spacing="10.0">
                                <padding>
                                    <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                                <Label id="message-label" text="Possible error" visible="false"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" styleClass="action-button" visible="false"/>
                            </HBox>
                        </VBox>
                    </Tab>
                    <padding>
                        <Insets top="20.0"/>
                    </padding>
                </TabPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>
