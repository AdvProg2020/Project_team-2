<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="320.0"
            prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.GUI.Controllers$LoginPopupController">
    <center>
        <VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" spacing="10.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Login Menu"/>
                <HBox>
                    <children>
                        <ImageView fx:id="usernameIcon" fitHeight="28.0" fitWidth="34.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <TextField fx:id="usernameField" promptText="username"/>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <ImageView fx:id="passwordIcon" fitHeight="28.0" fitWidth="34.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <PasswordField fx:id="passwordField" promptText="pasword"/>
                    </children>
                </HBox>
                <Label fx:id="errorLBL" text="Label"/>
                <Region prefHeight="23.0" prefWidth="150.0"/>
                <Button fx:id="loginBTN" mnemonicParsing="false" prefHeight="25.0" prefWidth="71.0" text="Login"/>
                <HBox alignment="CENTER" prefHeight="46.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="133.0" text="Dont have an account? "/>
                        <Hyperlink fx:id="registerLink" text="Register"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
