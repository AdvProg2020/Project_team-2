<VBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/ProductDetails.css"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="view.Controllers$ProductDetailMenuController">
    <padding>
        <Insets top="50.0"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <VBox alignment="CENTER" spacing="20.0">
            <ImageView fx:id="productIMG" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../img/default-product-pic.png"/>
            </ImageView>
            <Button id="compare-button" fx:id="compareBTN" mnemonicParsing="false" text="Compare"/>
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="20.0">
            <HBox alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0"/>
                </padding>
                <Label id="name-label" fx:id="nameLBL" text="Product1">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Label>
                <ImageView id="rating-icon" fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../img/full-star.png"/>
                </ImageView>
                <Label id="rating-count" fx:id="ratingCountLBL" layoutX="10.0" layoutY="10.0" text="Rating">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="96.0" minWidth="10.0" prefWidth="92.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.20001220703125" minWidth="10.0"
                                           prefWidth="108.80000000000001"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label styleClass="property-label" text="Brand:"/>
                    <Label fx:id="brandLBL" styleClass="value-label" text="brand" GridPane.columnIndex="1"/>
                    <Label styleClass="property-label" text="Category:" GridPane.rowIndex="1"/>
                    <Label fx:id="categoryLBL" styleClass="value-label" text="category" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                </GridPane>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
            <VBox spacing="5.0">
                <Label styleClass="property-label" text="Product Info:"/>
                <Text fx:id="productInfoTXT" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="value-label"
                      text="dfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfvdfk;x mcv ,[vbfdvdfvdfv"
                      wrappingWidth="578.13671875"/>
            </VBox>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <VBox alignment="CENTER" spacing="60.0" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="10.0">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@../img/shop.png"/>
                </ImageView>
                <Label id="seller-label" fx:id="sellerLBL" text="Store Name"/>
            </HBox>
            <VBox alignment="CENTER">
                <Label id="price-before-label" fx:id="priceBeforeLBL" text="\$99.99"/>
                <Label id="price-after-label" fx:id="priceAfterLBL" text="\$79.99"/>
            </VBox>
            <Button id="add-to-cart-button" fx:id="addToCartBTN" mnemonicParsing="false" text="+Add to cart">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Button>
            <padding>
                <Insets top="30.0"/>
            </padding>
        </VBox>
        <padding>
            <Insets bottom="30.0" left="60.0" right="60.0" top="30.0"/>
        </padding>
    </HBox>
    <TabPane stylesheets="@../css/TabPane.css" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Sellers">
            <TableView fx:id="sellersTBL" stylesheets="@../css/TableView.css">
                <columns>
                    <TableColumn fx:id="sellersTBLNumberCOL" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
                    <TableColumn fx:id="sellersTBLSellerCOL" maxWidth="1000.0" minWidth="200.0" prefWidth="200.0"
                                 text="Seller"/>
                    <TableColumn fx:id="sellersTBLPriceCOL" maxWidth="1000.0" minWidth="200.0" prefWidth="200.0"
                                 text="Price"/>
                    <TableColumn fx:id="sellersTBLNumberAvailableCOL" maxWidth="1000.0" minWidth="200.0"
                                 prefWidth="200.0" text="Number Available"/>
                </columns>
                <VBox.margin>
                    <Insets left="100.0" right="100.0" top="10.0"/>
                </VBox.margin>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </Tab>
        <Tab text="Properties">
            <TableView fx:id="PropertiesTBL" stylesheets="@../css/TableView.css">
                <columns>
                    <TableColumn fx:id="propertyTab" minWidth="200.0" prefWidth="200.0" text="Property"/>
                    <TableColumn fx:id="valueTab" minWidth="200.0" prefWidth="200.0" text="value"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </Tab>
        <Tab text="Reviews">
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
                <VBox fx:id="reviewsVB" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </Tab>
        <padding>
            <Insets bottom="20.0" left="200.0" right="200.0" top="40.0"/>
        </padding>
    </TabPane>
</VBox>
