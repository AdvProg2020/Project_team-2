<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="bg-pane" stylesheets="@../css/ManagingMenu.css"
            xmlns="http://javafx.com/javafx/11.0.1">
   <center>
      <VBox alignment="CENTER" maxWidth="-Infinity">
         <TableView fx:id="discounts" maxWidth="-Infinity" stylesheets="@../css/TableView.css" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="number" prefWidth="100.0" resizable="false" text="No"/>
               <TableColumn fx:id="discountCode" prefWidth="250.0" resizable="false" text="Discount Code"/>
               <TableColumn fx:id="percentage" prefWidth="100.0" resizable="false" text="Percentage"/>
               <TableColumn fx:id="maximumAmount" prefWidth="200.0" resizable="false" text="Maximum Amount"/>
               <TableColumn fx:id="remove" prefWidth="35.0" text="X"/>
            </columns>
            <VBox.margin>
               <Insets/>
            </VBox.margin>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <padding>
               <Insets bottom="5.0"/>
            </padding>
         </TableView>
         <StackPane>
            <VBox.margin>
               <Insets/>
            </VBox.margin>
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <TextField promptText="discount code"/>
                  <TextField layoutX="251.0" layoutY="10.0" promptText="percentage(%)"/>
                  <TextField layoutX="405.0" layoutY="10.0" promptText="maximum amount"/>
                  <Button id="confirm-button" fx:id="confirmBTN" mnemonicParsing="false"/>
                  <padding>
                     <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
               </HBox>
               <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0" visible="false">
                  <padding>
                     <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                  <children>
                     <Button id="add-button" fx:id="addDiscountBTN" mnemonicParsing="false"/>
                     <Region HBox.hgrow="ALWAYS"/>
                     <Label id="message-label" fx:id="error1" text="Possible error"/>
                  </children>
               </HBox>
            </children>
         </StackPane>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
      </VBox>
   </center>
</BorderPane>
