<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="bg-pane" stylesheets="@../css/ManagingMenu.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.view.Controllers$SellerProductManagingMenuController">
   <center>
      <VBox alignment="CENTER" maxWidth="-Infinity" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
          <TableView fx:id="productsTBL" focusTraversable="false" stylesheets="@../css/TableView.css"
                     VBox.vgrow="ALWAYS">
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
              <columns>
                  <TableColumn fx:id="idCol" editable="false" prefWidth="200.0" resizable="false" text="ID"/>
                  <TableColumn fx:id="nameCOL" editable="false" prefWidth="200.0" resizable="false" text="Name-Brand"/>
                  <TableColumn fx:id="priceCOL" editable="false" prefWidth="200.0" resizable="false" text="Price"/>
                  <TableColumn fx:id="saleCOL" editable="false" prefWidth="200.0" resizable="false" text="Sale ID"/>
                  <TableColumn fx:id="detailsCOL" editable="false" prefWidth="100.0" resizable="false" sortable="false"
                               text="Details"/>
                  <TableColumn fx:id="removeCOL" editable="false" prefWidth="100.0" resizable="false" sortable="false"
                               text="Remove"/>
              </columns>
              <VBox.margin>
                  <Insets/>
              </VBox.margin>
              <padding>
                  <Insets bottom="5.0"/>
              </padding>
          </TableView>
         <HBox alignment="CENTER" spacing="10.0">
            <padding>
               <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label id="message-label" fx:id="errorLBL" />
            <Region HBox.hgrow="ALWAYS" />
            <Button id="add-button" fx:id="addProductBTN" mnemonicParsing="false" styleClass="action-button" text="Add Product" />
         </HBox>
      </VBox>
   </center>
</BorderPane>
