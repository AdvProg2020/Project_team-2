<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
    <padding>
    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
</padding>
    <center>
        <AnchorPane fx:id="chatPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <left>
        <TabPane stylesheets="@../css/TabPane.css" BorderPane.alignment="CENTER">
            <Tab closable="false" text="Active Chats">
                <TableView prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/TableView.css">
                    <columns>
                        <TableColumn fx:id="activeChats" editable="false" prefWidth="75.0" text="Customer"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </Tab>
            <Tab closable="false" text="Chat Archive">
                <TableView prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/TableView.css">
                    <columns>
                        <TableColumn fx:id="chatArchive" editable="false" prefWidth="75.0" text="Customer"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </Tab>
        </TabPane>
    </left>
</BorderPane>
