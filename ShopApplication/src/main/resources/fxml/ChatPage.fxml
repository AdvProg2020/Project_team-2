<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
    <center>
        <VBox alignment="BOTTOM_LEFT" minHeight="400.0" minWidth="600.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="refreshBTN" layoutX="556.0" layoutY="20.0" mnemonicParsing="false" text="Refresh"/>
                <TextField fx:id="messageField" promptText="type your message here..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendBTN" mnemonicParsing="false" text="Send"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
