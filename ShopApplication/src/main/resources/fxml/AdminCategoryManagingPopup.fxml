<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="650.0" stylesheets="@../css/ManagingPopup.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controllers$AdminCategoryManagingPopupController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="40.0"/>
    </padding>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <TabPane maxWidth="-Infinity" stylesheets="@../css/TabPane.css">
                <Tab closable="false" text="Properties">
                    <TableView fx:id="properties" maxWidth="-Infinity" stylesheets="@../css/TableView.css">
                        <columns>
                            <TableColumn fx:id="propertyCOL" editable="false" maxWidth="400.0" minWidth="300.0"
                                         prefWidth="300.0" text="Property"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                <Tab fx:id="productsTAB" closable="false" text="Products">
                    <TableView fx:id="products" maxWidth="-Infinity" stylesheets="@../css/TableView.css">
                        <columns>
                            <TableColumn fx:id="productCOL" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                         text="Name-Brand"/>
                            <TableColumn fx:id="productRemoveCOL" editable="false" maxWidth="100.0" minWidth="100.0"
                                         prefWidth="100.0" resizable="false" sortable="false" text="Remove"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                <Tab fx:id="subCategoriesTAB" closable="false" text="Sub Categories">
                    <TableView fx:id="subCategories" maxWidth="-Infinity" stylesheets="@../css/TableView.css">
                        <columns>
                            <TableColumn fx:id="subCategoryCOL" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                         text="Name"/>
                            <TableColumn fx:id="subCategoryRemoveCOL" editable="false" maxWidth="100.0" minWidth="100.0"
                                         prefWidth="100.0" resizable="false" sortable="false" text="Remove"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                <padding>
                    <Insets top="20.0"/>
                </padding>
            </TabPane>
            <Label id="message-label" fx:id="errorLBL">
                <VBox.margin>
                    <Insets bottom="22.0" left="10.0" top="22.0"/>
                </VBox.margin>
            </Label>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Region VBox.vgrow="ALWAYS"/>
            <GridPane vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="101.60001220703126" minWidth="10.0"
                                       prefWidth="84.80003662109375"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="174.20001220703125" minWidth="10.0"
                                       prefWidth="124.79996337890627"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label fx:id="idKeyLBL" layoutX="10.0" layoutY="47.0" styleClass="property-label" text="ID:"/>
                <Label fx:id="idValueLBL" layoutX="110.0" layoutY="47.0" styleClass="value-label" text="Label"
                       GridPane.columnIndex="1"/>
                <Label styleClass="property-label" text="Name:" GridPane.rowIndex="1"/>
                <Label styleClass="property-label" text="Parent Name:" GridPane.rowIndex="2"/>
                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="property-box" GridPane.columnIndex="1"
                      GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </GridPane.margin>
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                    <TextField fx:id="nameField"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="property-box" GridPane.columnIndex="1"
                      GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </GridPane.margin>
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                    <TextField fx:id="parentField"/>
                </HBox>
            </GridPane>
            <Region layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS"/>
            <StackPane>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Button id="add-button" fx:id="addBTN" mnemonicParsing="false" text="Add" visible="false"/>
                <HBox fx:id="editHB" alignment="CENTER" spacing="10.0">
                    <Button id="save-button" fx:id="editBTN" mnemonicParsing="false" text="Save changes"/>
                    <Button id="discard-button" fx:id="discardBTN" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                            text="Discard"/>
                </HBox>
            </StackPane>
            <BorderPane.margin>
                <Insets left="30.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
