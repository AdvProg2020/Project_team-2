<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="bg-pane"
      stylesheets="@../css/AddProduct-1.css"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.Controllers$AddProductPopupController_Page1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>
    <Pane id="login-image" HBox.hgrow="ALWAYS"/>
    <VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="200.0" prefWidth="237.0" spacing="10.0"
          HBox.hgrow="ALWAYS">
        <padding>
            <Insets left="20.0" top="20.0"/>
        </padding>
        <Region VBox.vgrow="ALWAYS"/>
        <Label id="header-label" text="Add Product"/>
        <Region layoutX="10.0" layoutY="319.0" VBox.vgrow="ALWAYS"/>
        <HBox styleClass="field-box">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <TextField fx:id="ameField" promptText="name">
                <HBox.margin>
                    <Insets left="5.0"/>
                </HBox.margin>
            </TextField>
        </HBox>
        <HBox styleClass="field-box">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <TextField fx:id="brandField" promptText="brand"/>
            </children>
        </HBox>
        <Label id="message-label" fx:id="errorLBL"/>
        <Region layoutX="10.0" layoutY="287.0" VBox.vgrow="ALWAYS"/>
        <Button id="new-product-button" fx:id="newProductBTN" mnemonicParsing="false" text="Add New Product"/>
        <Button id="existing-product-button" fx:id="existingProductBTN" layoutX="35.0" layoutY="260.0"
                mnemonicParsing="false" text="Add Existing"/>
    </VBox>
</HBox>
