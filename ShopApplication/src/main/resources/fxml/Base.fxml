<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" minHeight="400.0" minWidth="600.0"
            stylesheets="@../css/BaseStyle.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="view.GUI.Controllers$BaseController">
    <top>
        <HBox id="top-box" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button id="back-button" fx:id="backBTN" alignment="CENTER" mnemonicParsing="false">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <Button id="logo-button" fx:id="logoBTN" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField id="search-field" fx:id="searchField" promptText="search products..." HBox.hgrow="ALWAYS"/>
            <Button id="search-button" fx:id="searchBTN" mnemonicParsing="false"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox fx:id="cartBTNWrapper" alignment="CENTER">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </VBox>
            <VBox fx:id="accountBTNWrapper" alignment="CENTER">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </VBox>
        </HBox>
    </top>
</BorderPane>
