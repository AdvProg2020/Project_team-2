<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="bg-pane" stylesheets="@../css/ManagingMenu.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="view.GUI.Controllers$ShoppingCartMenuController">
    <center>
        <VBox alignment="CENTER" maxWidth="-Infinity">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <TableView fx:id="productsTable" fixedCellSize="30.0" focusTraversable="false" maxWidth="-Infinity"
                       styleClass="bg-pane" stylesheets="@../css/TableView.css" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="productName" prefWidth="250.0" resizable="false" text="Name-Brand (Seller)"/>
                    <TableColumn fx:id="productUnitPrice" prefWidth="150.0" resizable="false" text="Unit Price"/>
                    <TableColumn fx:id="count" prefWidth="200.0" resizable="false" text="Count"/>
                    <TableColumn fx:id="totalPrice" prefWidth="150.0" resizable="false" text="Total Price"/>
                    <TableColumn fx:id="remove" prefWidth="100.0" resizable="false" sortable="false" text="Remove"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <padding>
                    <Insets bottom="5.0"/>
                </padding>
            </TableView>
            <HBox id="bottom-box" alignment="CENTER" spacing="10.0">
                <Button id="clear-cart-button" fx:id="purchaseBTN1" layoutX="677.0" layoutY="20.0"
                        mnemonicParsing="false" styleClass="action-button" text="Clear Cart"/>
                <Label id="message-label" fx:id="errorLBL" text="Possible errors" textFill="RED">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox alignment="CENTER">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                    <Label text="Total Price: " textAlignment="CENTER">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <Label fx:id="totalPriceLBL" layoutX="10.0" layoutY="31.0" text="29$" textAlignment="CENTER">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                </HBox>
                <Button id="purchase-button" fx:id="purchaseBTN" layoutX="133.0" layoutY="10.0" mnemonicParsing="false"
                        styleClass="action-button" text="Purchase"/>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
                </padding>
            </HBox>
        </VBox>
    </center>
</BorderPane>
